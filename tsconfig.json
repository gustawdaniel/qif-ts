{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2020"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
